<% for (const item of items) { %>
<div class="exam-card">
  <h3 class="exam-card-title"><%= item.title %></h3>
  <span class="exam-card-date"><%= item.date %></span>
  <% if (item.location) { %>
  <span class="exam-card-location"><%= item.location %></span>
  <% } %>
  <p class="exam-card-summary"><%= item.description %></p>
  <a href="<%= item.path %>" class="exam-card-link">
    Exam Details &rarr;
  </a>
</div>
<% } %>
